builddir="$srcdir/$pkgname-$pkgver/build"
sourcedir=""

pkgver() {
    printf "%s" "$(curl -s "https://github.com/MiKTeX/miktex/releases/latest" | \
        sed 's#.*tag/\(.*\)\".*#\1#')"
}

